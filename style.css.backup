/* ===== RESPONSIVE - EXACT BREAKPOINTS ===== */
@media (min-width: 1440px) {
    .class-grid {
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    }
}

@media (max-width: 1024px) {
    .classroom-container {
        padding: 16px 20px;
    }

    .class-grid {
        grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
        gap: 16px;
    }

    .class-content {
        padding: 16px 20px;
    }

    .homepage-grid {
        grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
        gap: 20px;
    }
}

@media (max-width: 768px) {
    .classroom-header {
        padding: 0 16px;
        height: 56px;
    }

    .header-title {
        font-size: 20px;
    }

    .classroom-container {
        padding: 12px 16px;
    }

    .class-grid {
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 12px;
    }

    .class-card {
        height: 300px;
    }

    .card-header {
        height: 96px;
        padding: 12px;
    }

    .class-title {
        font-size: 22px;
    }

    .class-banner {
        height: 200px;
        padding: 16px;
    }

    .class-name {
        font-size: 28px;
    }

    .class-section-text {
        font-size: 18px;
    }

    .class-content {
        padding: 12px 16px;
    }

    .homepage-grid {
        grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
        gap: 16px;
    }

    .homepage-card {
        height: 300px;
    }

    .card-header-home {
        height: 96px;
    }
}

@media (max-width: 600px) {
    .class-grid {
        grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
    }
}

@media (max-width: 480px) {
    .classroom-header {
        padding: 0 12px;
    }

    .header-left,
    .header-right {
        gap: 8px;
    }

    .header-title {
        font-size: 18px;
    }

    .icon-button {
        width: 40px;
        height: 40px;
    }

    .classroom-container {
        padding: 8px 12px;
    }

    .class-grid {
        grid-template-columns: 1fr;
        gap: 12px;
    }

    .class-card {
