/* ===== GOOGLE CLASSROOM - EXACT MATCH ===== */
/* Pixel-perfect CSS based on classroom.png */

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    /* Exact Google Classroom Colors from image */
    --google-blue: #1967d2;
    --google-blue-dark: #1557b0;
    --google-green: #1e8e3e;
    --google-red: #d93025;
    --google-orange: #e37400;
    --google-purple: #9334e6;
    --google-teal: #00897b;

    /* Neutral Colors */
    --bg-light: #f1f3f4;
    --card-bg: #ffffff;
    --text-primary: #3c4043;
    --text-secondary: #5f6368;
    --border-color: #dadce0;
    --hover-bg: #f1f3f4;

    /* Shadows - exact from Google Classroom */
    --shadow-card: 0 1px 2px 0 rgba(60, 64, 67, 0.3), 0 1px 3px 1px rgba(60, 64, 67, 0.15);
    --shadow-card-hover: 0 1px 3px 0 rgba(60, 64, 67, 0.3), 0 4px 8px 3px rgba(60, 64, 67, 0.15);
}

body {
    font-family: 'Roboto', Arial, sans-serif;
    background-color: var(--bg-light);
    color: var(--text-primary);
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    -webkit-font-smoothing: antialiased;
}

/* ===== HEADER - EXACT MATCH ===== */
.classroom-header {
    background-color: var(--card-bg);
    border-bottom: 1px solid var(--border-color);
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20px;
    position: sticky;
    top: 0;
    z-index: 100;
}

.header-left,
.header-right {
    display: flex;
    align-items: center;
    gap: 12px;
}

.header-google {
    font-size: 22px;
    font-weight: 400;
    color: var(--text-secondary);
    letter-spacing: 0;
}

.header-classroom {
    font-size: 22px;
    font-weight: 400;
    color: var(--text-secondary);
    letter-spacing: 0;
    margin-left: 8px;
}

.icon-button {
    width: 48px;
    height: 48px;
    border: none;
    background: transparent;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    color: var(--text-secondary);
    transition: background-color 0.15s;
}

.icon-button:hover {
    background-color: var(--hover-bg);
}

.user-avatar {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: var(--google-blue);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 500;
    font-size: 13px;
    cursor: pointer;
}

/* ===== MAIN CONTAINER - EXACT MATCH ===== */
.classroom-container {
    flex: 1;
    padding: 20px 24px;
    max-width: 1440px;
    width: 100%;
    margin: 0;
}

/* ===== GRID - EXACT MATCH ===== */
.class-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(258px, 1fr));
    gap: 20px;
    padding: 8px 0;
}

/* ===== CARDS - EXACT MATCH ===== */
.class-card {
    background: var(--card-bg);
    border-radius: 8px;
    border: 1px solid var(--border-color);
    overflow: hidden;
    cursor: pointer;
    transition: box-shadow 0.28s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    flex-direction: column;
    height: 336px;
    box-shadow: var(--shadow-card);
}

.class-card:hover {
    box-shadow: var(--shadow-card-hover);
}

/* Card Header - Exact proportions */
.card-header {
    height: 104px;
    padding: 16px;
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    position: relative;
    color: white;
    background: var(--google-blue);
}

.card-title-group {
    flex: 1;
    min-width: 0;
}

.class-title {
    font-size: 24px;
    font-weight: 400;
    margin: 0 0 4px 0;
    color: white;
    line-height: 1.25;
    overflow: hidden;
    text-overflow: ellipsis;
}

.class-section {
    font-size: 14px;
    font-weight: 400;
    color: rgba(255, 255, 255, 0.87);
    line-height: 1.43;
    overflow: hidden;
    text-overflow: ellipsis;
}

.card-menu {
    width: 40px;
    height: 40px;
    color: white;
    margin: -8px -8px 0 0;
}

.card-menu:hover {
    background-color: rgba(255, 255, 255, 0.16);
}

/* Card Body - Exact proportions */
.card-body {
    flex: 1;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--card-bg);
    min-height: 0;
}

.card-placeholder {
    width: 100%;
    height: 100%;
    background: #fafafa;
}

/* Card Footer - Exact proportions */
.card-footer {
    height: 56px;
    border-top: 1px solid var(--border-color);
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding: 0 8px;
    gap: 0;
    background: var(--card-bg);
}

.folder-button,
.trend-button {
    width: 40px;
    height: 40px;
    color: var(--text-secondary);
}

/* ===== SECTION VIEW (GAMES VIEW) ===== */
.games-view {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: white;
    z-index: 1000;
}

.games-view.active {
    display: flex;
}

/* ===== MAIN CONTENT AREA ===== */
.main-content {
    flex: 1;
    margin-left: 0;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    transition: margin-left 0.3s ease;
}

.left-sidebar.open~.main-content {
    margin-left: 280px;
}

/* ===== COURSE TOP BAR ===== */
.course-top-bar {
    height: 64px;
    background: white;
    border-bottom: 1px solid var(--border-color);
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 24px;
    position: sticky;
    top: 0;
    z-index: 100;
}

.course-top-left {
    display: flex;
    align-items: center;
    gap: 16px;
}

.course-logo {
    width: 32px;
    height: 32px;
    border-radius: 4px;
    object-fit: contain;
}

.course-info {
    display: flex;
    flex-direction: column;
}

.course-title {
    font-size: 20px;
    font-weight: 400;
    color: var(--text-primary);
    margin: 0;
    line-height: 1.2;
}

.course-description {
    font-size: 14px;
    color: var(--text-secondary);
    margin: 0;
    line-height: 1.4;
}

.course-top-right {
    display: flex;
    align-items: center;
    gap: 8px;
}

/* ===== TAB NAVIGATION ===== */
.tab-navigation {
    background: white;
    border-bottom: 1px solid var(--border-color);
    display: flex;
    padding: 0 24px;
}

.tab-nav-button {
    background: transparent;
    border: none;
    border-bottom: 3px solid transparent;
    padding: 16px 24px;
    font-size: 14px;
    font-weight: 500;
    color: var(--text-secondary);
    cursor: pointer;
    transition: all 0.2s;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.tab-nav-button:hover {
    background-color: var(--hover-bg);
}

.tab-nav-button.active {
    color: var(--google-blue);
    border-bottom-color: var(--google-blue);
    font-weight: 700;
}

/* ===== TOPIC SELECTOR ===== */
.topic-selector {
    background: white;
    border: 2px solid var(--google-blue);
    border-radius: 8px;
    padding: 12px 16px;
    margin: 24px 24px 16px 24px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    cursor: pointer;
    transition: all 0.2s;
}

.topic-selector:hover {
    background-color: rgba(25, 103, 210, 0.04);
}

.topic-text {
    font-size: 14px;
    font-weight: 500;
    color: var(--google-blue);
}

/* ===== ASSIGNMENT LIST ===== */
.assignment-list {
    flex: 1;
    padding: 0 24px 24px 24px;
    background: var(--bg-light);
}

.assignment-item {
    background: white;
    border: 1px solid var(--border-color);
    border-radius: 8px;
    padding: 16px;
    margin-bottom: 12px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    cursor: pointer;
    transition: all 0.2s;
    box-shadow: 0 1px 2px rgba(60, 64, 67, 0.1);
}

.assignment-item:hover {
    box-shadow: 0 1px 3px rgba(60, 64, 67, 0.2);
    border-color: rgba(60, 64, 67, 0.2);
}

.assignment-left {
    display: flex;
    align-items: center;
    gap: 16px;
    flex: 1;
}

.assignment-icon {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: var(--bg-light);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-secondary);
}

.assignment-info {
    flex: 1;
}

.assignment-title {
    font-size: 16px;
    font-weight: 500;
    color: var(--text-primary);
    margin: 0 0 4px 0;
    line-height: 1.4;
}

.assignment-subtitle {
    font-size: 14px;
    color: var(--text-secondary);
    margin: 0;
    line-height: 1.4;
}

.assignment-right {
    display: flex;
    align-items: center;
    gap: 12px;
}

.assignment-due {
    font-size: 14px;
    color: var(--text-secondary);
    white-space: nowrap;
}

.assignment-menu {
    width: 32px;
    height: 32px;
    border: none;
    background: transparent;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    color: var(--text-secondary);
    transition: background-color 0.2s;
}

.assignment-menu:hover {
    background-color: var(--hover-bg);
}

/* ===== RESPONSIVE FOR SECTION VIEW ===== */
@media (max-width: 1024px) {
    .main-content {
        margin-left: 0 !important;
    }

    .left-sidebar {
        transform: translateX(-100%);
    }

    .left-sidebar.open {
        transform: translateX(0);
    }

    .left-sidebar.open~.main-content {
        margin-left: 0 !important;
    }

    .course-top-bar {
        padding: 0 16px;
    }

    .tab-navigation {
        padding: 0 16px;
    }

    .topic-selector {
        margin: 20px 16px 12px 16px;
    }

    .assignment-list {
        padding: 0 16px 20px 16px;
    }
}

@media (max-width: 768px) {
    .course-top-bar {
        height: 56px;
        padding: 0 12px;
    }

    .course-title {
        font-size: 18px;
    }

    .course-description {
        font-size: 13px;
    }

    .tab-nav-button {
        padding: 12px 16px;
        font-size: 13px;
    }

    .topic-selector {
        margin: 16px 12px 8px 12px;
        padding: 10px 12px;
    }

    .assignment-item {
        padding: 12px;
    }

    .assignment-icon {
        width: 32px;
        height: 32px;
    }

    .assignment-title {
        font-size: 15px;
    }

    .assignment-subtitle {
        font-size: 13px;
    }

    .assignment-due {
        font-size: 13px;
    }
}

@media (max-width: 480px) {
    .course-top-left {
        gap: 12px;
    }

    .course-logo {
        width: 20px;
        height: 20px;
    }

    .course-title {
        font-size: 16px;
    }

    .course-description {
        font-size: 12px;
    }

    .tab-navigation {
        padding: 0 8px;
    }

    .tab-nav-button {
        padding: 10px 12px;
        font-size: 12px;
    }

    .topic-selector {
        margin: 12px 8px 6px 8px;
        padding: 8px 10px;
    }

    .assignment-list {
        padding: 0 8px 16px 8px;
    }

    .assignment-item {
        padding: 10px;
        flex-direction: column;
        align-items: flex-start;
        gap: 8px;
    }

    color: white;
}

.badge-blue {
    background: var(--google-blue);
}

.badge-green {
    background: var(--google-green);
}

.badge-turquoise {
    background: var(--google-teal);
}

.badge-orange {
    background: var(--google-orange);
}

.course-name {
    font-size: 14px;
    color: var(--text-primary);
}

/* ===== HOMEPAGE GRID ===== */
.homepage-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 24px;
    padding: 8px 0;
    justify-items: start;
}

/* ===== HOMEPAGE CARDS ===== */
.homepage-card {
    background: var(--card-bg);
    border-radius: 8px;
    border: 1px solid var(--border-color);
    overflow: hidden;
    box-shadow: var(--shadow-card);
    transition: box-shadow 0.28s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    display: flex;
    flex-direction: column;
    height: 336px;
    width: 100%;
    max-width: 320px;
}

.homepage-card:hover {
    box-shadow: var(--shadow-card-hover);
}

/* Card Header */
.card-header-home {
    height: 104px;
    padding: 16px;
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
}

.card-title-group-home {
    flex: 1;
    min-width: 0;
}

.card-title-home {
    font-size: 24px;
    font-weight: 500;
    color: white;
    margin: 0 0 4px 0;
    line-height: 1.25;
}

.card-subtitle-home {
    font-size: 14px;
    font-weight: 400;
    color: rgba(255, 255, 255, 0.87);
    margin: 0;
    line-height: 1.43;
}

.card-menu-home {
    width: 40px;
    height: 40px;
    border: none;
    background: transparent;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    color: white;
    transition: background-color 0.15s;
    margin: -8px -8px 0 0;
}

.card-menu-home:hover {
    background-color: rgba(255, 255, 255, 0.16);
}

/* Card Body */
.card-body-home {
    flex: 1;
    background: white;
    min-height: 0;
}

/* Card Footer */
.card-footer-home {
    height: 56px;
    border-top: 1px solid var(--border-color);
    background: white;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding: 0 8px;
    gap: 0;
}

.footer-icon-btn {
    width: 40px;
    height: 40px;
    border: none;
    background: transparent;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    color: var(--text-secondary);
    transition: background-color 0.15s;
}

.footer-icon-btn:hover {
    background-color: var(--hover-bg);
}

